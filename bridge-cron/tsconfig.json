{
    "compileOnSave": true,
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es6", "dom" ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": false,
      "outDir": "./dist/",
      "removeComments": false,
      "sourceMap": true,
      "resolveJsonModule": true,
      "target": "es6",
      "esModuleInterop": true,
      "skipLibCheck": true
      },
    "exclude": [
      "node_modules/*"
    ]
  }